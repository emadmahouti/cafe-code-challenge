<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.cafe.codechallenge.presentation.ui.splash.SplashFragment"
        android:label="Splash Fragment"
        >

        <action
            android:id="@+id/gotoMovieList"
            app:destination="@id/MovieListFragment"
            app:popUpTo="@id/SplashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/MovieListFragment"
        android:name="com.cafe.codechallenge.presentation.ui.movieList.MovieListFragment"
        android:label="Movie List"
        />

</navigation>